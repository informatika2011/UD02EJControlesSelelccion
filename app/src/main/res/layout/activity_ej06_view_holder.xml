<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >

    <TextView  android:id="@+id/lblEtiquetaVH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona una opcion"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <ListView android:id="@+id/lstListViewTitularesVH"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView  android:id="@+id/lblTitularSeleccionadoVH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La opcion seleccionada es:"
        />

</LinearLayout>